<?xml version="1.0" encoding="UTF-8"?>
<StackLayout xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:local="clr-namespace:GolfingStats"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GolfingStats.Controls.ShotModalNavBar"
             x:Name="this"
             HorizontalOptions="FillAndExpand"
             VerticalOptions="Start"
             BackgroundColor="SeaGreen">

    <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="5">
        <StackLayout.Margin>
            <OnPlatform x:TypeArguments="Thickness">
                <On Platform="iOS">0,30,0,0</On>
            </OnPlatform>
        </StackLayout.Margin>
        <Label x:Name="lblHoleNumber" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" TextColor="White" FontSize="Medium" FontAttributes="Bold" />
        <!--TODO:Add facing arrow to close modal-->
        <Button x:Name="btnCloseModal" HorizontalOptions="End" VerticalOptions="CenterAndExpand" WidthRequest="40" BackgroundColor="SeaGreen" TextColor="White" Style="{StaticResource FontAwesomeSolid}" Text="&#xf063;" />
    </StackLayout>
</StackLayout>